{% extends 'base.html.twig' %}

{% block title %}Contactez-nous !{% endblock %}

{% block body %}
    <section>
        <div class="container d-flex flex-column">
            <div class="row align-items-center justify-content-between gx-0 min-vh-100">

                <div class="col-12 col-md-5 align-self-stretch">
                    <div class="d-md-none img-cover"></div>
                    <img alt="..." src="/img/ecf.jpg" height="80%" width="640">
                    <div class="d-none d-md-block vw-50 h-100 float-end bg-cover">
                    </div>
                </div>
                <div class="col-12 col-md-6 py-8 py-md-11" style="color: #28A5C5">
                    <h2 class="fw-bold text-center mb-2">
                        Nous contactez.
                    </h2>

                    <p class="fs-lg text-center text-muted mb-0">
                        Une question ? N'hesitez pas Ã  nous contactez.
                    </p>

                    <hr class="hr-sm my-6 my-md-8 mx-auto bg-gray-300" style="color: #28A5C5;">

                    {{ form_start(form) }}
                        {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                    {% endfor %}

                    <div class="my-custom-class-for-errors">
                        {{ form_errors(form) }}
                    </div>

                    <div class="form-group mb-5">
                        <label class="form-label" for="contactName" style="color: #28A5C5">
                            {{ form_label(form.nom) }}
                        </label>
                        {{ form_widget(form.nom) }}
                    </div>

                    <div class="form-group mb-5">
                        <label class="form-label" for="contactEmail" style="color: #28A5C5">
                            {{ form_label(form.email) }}
                        </label>
                        {{ form_widget(form.email) }}
                    </div>

                    <div class="form-group mb-5">
                        <label for="contactMessage" style="color: #28A5C5">
                            {{ form_label(form.message) }}
                        </label>
                        {{ form_widget(form.message) }}
                    </div>

                    <div class="form-group mb-0">
                        {{ form_widget(form.envoyer) }}
                    </div>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </section>
{% endblock %}

