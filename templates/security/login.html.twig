{% extends 'base.html.twig' %}

{% block title %}Login !{% endblock %}

{% block body %}
    <!-- CONTENT -->
    <section
            style=" background-color: #504e4e;
                    color: #18DCFF;
            ">
        <div class="container d-flex flex-column">
            <div class="row align-items-center justify-content-center gx-0 min-vh-100">
                <div class="col-12 col-md-6 col-lg-4 py-8 py-md-11">

                    <!-- Heading -->
                    <h1 class="mb-0 fw-bold" style="text-align: center">
                        Ouvrir une session
                    </h1>

                    <!-- TEXT -->
                    <p class="mb-6 text-muted" style="text-align: center">
                        Administration du site internet.
                    </p>

                    <form method="post" class="mb-6">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, ) }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as
                                {{ app.user.username }},
                                <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required/>
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required/>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                        <button
                                class="btn w-100 btn-primary mt-4"
                                type="submit"
                                style="
                            font-size: 1.3rem;
                            margin-top: 15px;
                            color: #cec950;
                            border: none;
                            cursor: pointer;
                            transition: .2s;
                            width: 100%;
                        ">
                            Ouvrir une session
                        </button>
                    </form>
                </div>
            </div>
            <!-- / .row -->
        </div>
        <!-- / .container -->
    </section>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
{% endblock %}
