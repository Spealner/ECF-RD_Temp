{% extends 'base.html.twig' %}

{% block title %}Ajout ChambreFroides / Sondes{% endblock %}

{% form_theme addSondesForm 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <section style="background-color: #504e4e">
        <div class="container d-flex flex-column">
            <div class="row align-items-center justify-content-between gx-0 min-vh-100">
                <div class="col-12 col-md-5 align-self-stretch">
                    <div class="d-md-none img-cover"></div>
                    <img alt="..." src="/img/ecf.jpg" height="87%" width="640">
                    <div class="d-none d-md-block vw-50 h-100 float-end bg-cover">
                    </div>
                </div>
                <div class="col-12 col-md-6 py-8 py-md-11" style="color: #28A5C5">
                    <h2 class="fw-bold text-center mb-2">
                        Ajouter des donnes de sondes
                    </h2>

                    <hr class="hr-sm my-6 my-md-8 mx-auto bg-gray-300" style="color: #28A5C5;">

                    {{ form_start(addSondesForm) }}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <div class="my-custom-class-for-errors">
                        {{ form_errors(addSondesForm) }}
                    </div>

                    <div class="form-group mb-5">
                        <label class="form-label" for="contactTitle" style="color: #28A5C5">
                            {{ form_label(addSondesForm.title) }}
                        </label>
                        {{ form_widget(addSondesForm.title) }}
                        <label class="form-label" for="contactSubtitle" style="color: #28A5C5">
                            {{ form_label(addSondesForm.subtitle) }}
                        </label>
                        {{ form_widget(addSondesForm.subtitle) }}
                        <label class="form-label" for="Temperatures" style="color: #28A5C5">
                            {{ form_label(addSondesForm.temperatures) }}
                        </label>
                        {{ form_widget(addSondesForm.temperatures) }}
                        <label class="checkbox" for="contactHygromÃ©tries" style="color: #28A5C5">
                            {{ form_label(addSondesForm.hygrometries) }}
                        </label>
                        {{ form_widget(addSondesForm.hygrometries) }}
                        <label class="form-label" for="contactDate" style="color: #28A5C5">
                            {{ form_label(addSondesForm.date) }}
                        </label>
                        {{ form_widget(addSondesForm.date) }}
                        <label class="form-label" for="contactTempRelever" style="color: #28A5C5">
                            {{ form_label(addSondesForm.temprelever) }}
                        </label>
                        {{ form_widget(addSondesForm.temprelever) }}
                        <label class="form-label" for="contactHygroRelever" style="color: #28A5C5">
                            {{ form_label(addSondesForm.hygrorelever) }}
                        </label>
                        {{ form_widget(addSondesForm.hygrorelever) }}
                    </div>

                    <div class="form-group mb-0">
                        {{ form_widget(addSondesForm.envoyer) }}
                    </div>

                    {{ form_end(addSondesForm) }}

                </div>
            </div>
        </div>
    </section>
{% endblock %}

